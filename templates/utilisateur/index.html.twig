{% extends 'base.html.twig' %}

{% block title %}Gestion Des Utilisateur{% endblock %}

{% block body %}
    <h1>Bienvenu utilisateur</h1>
    <div class="container" style="margin-top: 20px;">
        <a href="{{ path('create') }}" class="btn btn-primary col-4" style="margin: 20px;">nouveau</a>
    </div>
    <div class="container">
        <table class="table table-hover">
            <thead class="table-dark">
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for utilisateur in utilisateurs %}
                <tr class="table-primary">
                    <th scope="row">{{  utilisateur.nom }}</th>
                    <td>{{  utilisateur.prenom }}</td>
                    <td>
                        <a href="{{ path('show',{'id':utilisateur.id} ) }}" class="btn btn-danger col-4">afficher</a>
                        <a href="{{ path('update',{'id':utilisateur.id} )}}" class="btn btn-success col-4">modiffier</a>
                        <a href="{{ path('delete',{'id':utilisateur.id} ) }}" class="btn btn-warning col-3">supprimer</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}
